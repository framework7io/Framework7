    link(rel="stylesheet", href="css/my-app.css")
  body
    // Status bar overlay for fullscreen mode
    .statusbar-overlay
      
    // Panels overlay
    .panel-overlay
    // Left panel with reveal effect
    .panel.panel-left.panel-reveal
      .content-block
        p Left panel content goes here
    // Right panel with cover effect
    .panel.panel-right.panel-cover
      .content-block
        p Right panel content goes here

    // Views
    .views
      // The main view
      .view.view-main.navbar-through
        .navbar
          .navbar-inner(data-page="index")
            .center.sliding Main View
          .navbar-inner.cached(data-page="about")
            .left
              a(href="#").back.link 
                i.icon.icon-back-blue
                span Back
            .center.sliding About Us
          .navbar-inner.cached(data-page="services")
            .left
              a(href="#").back.link 
                i.icon.icon-back-blue
                span Back
            .center.sliding Services
          .navbar-inner.cached(data-page="more-services")
            .left
              a(href="#").back.link 
                i.icon.icon-back-blue
                span Back
            .center.sliding MORE Services
        // Pages
        .pages.inline-templates
          // Page, data-page contains page name
          .page(data-page="index")
            // Scrollable page content
            .page-content
              .content-block-title Hello
              .content-block
                .content-block-inner
                  p This is an example how to do templates without loading them via ajax.
                  p Use this with your preferred client-side framework to handle and render the pages, while F7 switches between the pages using the new .switchContent method on a View.
                  p Each view may have different layout, different navbar type (dynamic, fixed or static) or without navbar.
              .list-block
                ul
                  li
                    a(href="#").item-link.item-link-about
                      .item-content
                        .item-inner
                          .item-title About
                  li
                    a(href="#").item-link.item-link-services
                      .item-content
                        .item-inner
                          .item-title Services
          
